{
  "version": 2,
  "builds": [
    {
      "src": "**/*.php",
      "use": "@vercel/php@0.7.4",
      "config": {
        "includeFiles": [
          "common/**/*.php",
          "config/**/*.php",
          "public/**/*.php",
          "venobox/**/*",
          "assets/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "outputDirectory": "public"
}
